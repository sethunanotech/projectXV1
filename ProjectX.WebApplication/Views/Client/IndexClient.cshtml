@model IEnumerable<ProjectX.Application.Usecases.Clients.GetClientResponse>

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <style>
       

        .table-responsive{
            margin-top:30px;
        }
    </style>
    <script src="~/js/sweetalert.js"></script>
    <center style="font-size:30px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">CLIENT MASTER</center>

    <div>
        <a asp-action="CreateClient" class="btn btn-outline-primary">Create Client </a>

    </div>
    <div class="table-responsive">
        <table class=" display  table-striped " id="MyTable">
            <thead>
                <tr>
                    <th>
                        S.No
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        CreatedOn
                    </th>
                    <th>
                        CreatedBy
                    </th>
                    <th>
                        ModifiedOn
                    </th>
                    <th>
                        ModifiedBy
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sno = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{
                                sno++;
                            }
                            @sno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastModifiedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastModifiedBy)
                        </td>
                      
                        <td>
                            <div class="btn-group bg-danger">
                                <a asp-action="EditClient" asp-route-clientID="@item.ID" class="btn btn-primary">Edit</a>

                          
                                <form asp-action="DeleteClient" asp-route-clientID="@item.ID" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                    <input type="hidden" asp-for="@item.ID" />
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
@try
{
    if (TempData["AddedClient"] != null)
    {
        <script>
            swal("", "Client Added Successfully", "success");
        </script>
    }
    if (TempData["FailedClient"] != null)
    {
        <script>
            swal("", "Client Added Failed", "error");
        </script>
    }
    if (TempData["EditedClient"] != null)
    {
        <script>
            swal("", "Client Updated Successfully", "success");
        </script>
    }
    if (TempData["DeleteClient"] != null)
    {
        <script>
            swal("", "Client Updated Successfully", "success");
        </script>
    }
}
catch
{

}
<script src="~/js/jquery.js"></script>
<script>
    jQueryAjaxDelete = form => {
        if (confirm('Are you sure to delete this record ?')) {
            try {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        $('#IndexClient').html(res.html);
                    },
                    error: function (err) {
                        console.log(err)
                    }
                })
            } catch (ex) {
                console.log(ex)
            }
        }

        //prevent default form submit event
        return false;
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

