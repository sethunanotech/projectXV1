@model ProjectX.Application.Usecases.User.UserAddRequest
<html>
<link href="~/css/webform.css" rel="stylesheet" />
<body>
    <center style="font-size:30px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">USER</center>

    <a asp-action="IndexUser" style="padding:10px;
	border-radius: 11px;
	box-shadow: 4px 3px 2px darkgrey;
	background: white;">
        Back to Index
    </a>
    <div class="card">
        <div class="card-body">
            <div class="containers">
                <div class="text">
                    Create User
                </div>
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="input-data">
                            <select id="drpEmpList" class="control" asp-for="ClientID" asp-items="@(new SelectList(ViewBag.client, "Id", "Name"))">
                                <option value="">--Clients--</option>
                            </select>
                            <span asp-validation-for="ClientID" class="text-danger"></span> 
                            
                        </div>
                        <div class="input-data">
                            <input asp-for="Name" type="text" required>
                            <div class="underline"></div>
                            <label asp-for="Name">Name</label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="input-data">
                            <input asp-for="UserName" type="text" required>
                            <div class="underline"></div>
                            <label asp-for="UserName">UserName</label>
                        </div>
                        <div class="input-data">
                            <input asp-for="Password" type="text" required>
                            <div class="underline"></div>
                            <label asp-for="Password">Password</label>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="input-data">
                            <label asp-for="CreatedBy" style="margin-bottom:31px!important;font-size: 14px;
	                    	color: #3498db;">CreatedBy</label>
                            <input asp-for="CreatedBy" type="text" value=@ViewBag.UserName readonly>
                        </div>
                        <div class="input-data" style="text-align:center">
                            <button type="submit" value="submit" class="sbmit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>